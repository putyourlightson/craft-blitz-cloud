{
  "name": "putyourlightson/craft-blitz-cloud",
  "description": "Craft Cloud adapter for the Blitz plugin.",
  "version": "1.0.0-beta.1",
  "type": "craft-plugin",
  "homepage": "https://putyourlightson.com/plugins/blitz",
  "license": "proprietary",
  "keywords": [
    "craftcms",
    "cloud",
    "adapter",
    "purger",
    "cache",
    "blitz"
  ],
  "require": {
    "php": "^8.0.2",
    "craftcms/cloud": "^1.41",
    "craftcms/cms": "^4.6",
    "putyourlightson/craft-blitz": "^4.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main",
    "markhuot/craft-pest-core": "^2.0.0-rc2",
    "mockery/mockery": "^1.0",
    "putyourlightson/craft-generate-test-spec": "v2.x-dev"
  },
  "scripts": {
    "phpstan": "phpstan --ansi --memory-limit=1G",
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --fix --ansi"
  },
  "autoload": {
    "psr-4": {
      "putyourlightson\\blitzcloud\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "pestphp/pest-plugin": true,
      "yiisoft/yii2-composer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "support": {
    "docs": "https://github.com/putyourlightson/craft-blitz-cloud",
    "source": "https://github.com/putyourlightson/craft-blitz-cloud",
    "issues": "https://github.com/putyourlightson/craft-blitz-cloud/issues"
  },
  "extra": {
    "name": "Blitz Cloud Adapter",
    "handle": "blitz-cloud",
    "developer": "PutYourLightsOn",
    "developerUrl": "https://putyourlightson.com/",
    "documentationUrl": "https://github.com/putyourlightson/craft-blitz-cloud",
    "changelogUrl": "https://raw.githubusercontent.com/putyourlightson/craft-blitz-cloud/v1/CHANGELOG.md",
    "class": "putyourlightson\\blitzcloud\\Plugin"
  }
}
